<div class="row">
  <div class="col-4 border">
  <%= email.object %>
  </div>
  <div class="col-8 border">
  <div class="contanier">
  <div class="row text-center justify-content-center">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @email.object %></h5>
        <p class="card-text"><%= @email.body %></p>
        <%= link_to "Delete", email_path(@email), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }, remote: true %>

        <%= link_to "Unread", email_path(read: false), class: "btn btn-info",id: "btnread", remote: true, method: "put" %>

      </div>
    </div>
  </div>
</div>
</div>